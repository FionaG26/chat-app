{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./out-tsc",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "sourceMap": true,
    "declaration": false,
    "importHelpers": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "out-tsc"
  ]
}
